{
  "name": "szkrabok-playwright-mcp",
  "version": "2.0.2",
  "description": "Production-grade MCP browser automation layer with persistent sessions and stealth capabilities",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "szkrabok": "./src/index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --write \"{src,automation,selftest}/**/*.{js,json,md}\" \"*.{js,json,md}\"",
    "format": "npm run prettier",
    "format:check": "prettier --check \"{src,automation,selftest}/**/*.{js,json,md}\" \"*.{js,json,md}\"",
    "codegen:mcp": "node packages/mcp-client/codegen/generate-mcp-tools.mjs",
    "prepack": "git describe --exact-match --tags HEAD 2>/dev/null || (echo 'ERROR: HEAD is not tagged. Run npm run release:patch or release:minor first.' && exit 1)",
    "pack:runtime": "npm pack --workspace=packages/runtime --pack-destination=dist/",
    "pack:mcp-client": "npm pack --workspace=packages/mcp-client --pack-destination=dist/",
    "pack": "mkdir -p dist && npm run pack:runtime && npm run pack:mcp-client",
    "release:patch": "npm version patch --workspaces --include-workspace-root --ignore-scripts && npm run pack",
    "release:minor": "npm version minor --workspaces --include-workspace-root --ignore-scripts && npm run pack",
    "test": "npm run test:self && npm run test:auto",
    "test:node": "node --test selftest/node/*.test.js",
    "test:runtime:unit": "node --test selftest/runtime/unit.test.js",
    "test:runtime:integration": "node --test selftest/runtime/integration.test.js",
    "test:contracts": "node --test selftest/mcp/contract.test.js",
    "test:playwright": "playwright test --project=selftest",
    "prepare": "node scripts/setup.js",
    "postinstall": "node scripts/patch-playwright.js",
    "test:self": "playwright test --project=selftest && node --test selftest/node/*.test.js",
    "test:auto": "PLAYWRIGHT_PROJECT=automation playwright test --project=automation",
    "test:clientmcp": "playwright test --project=client"
  },
  "keywords": [
    "mcp",
    "playwright",
    "browser-automation",
    "stealth",
    "session-management",
    "llm-tools",
    "web-scraping",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/PabloVitasso/szkrabok.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@playwright/mcp": "^0.0.54",
    "dotenv": "^17.3.1",
    "playwright": "^1.49.1",
    "playwright-core": "^1.58.2",
    "playwright-extra": "^4.3.6",
    "puppeteer": "^24.34.0",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "smol-toml": "^1.6.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/puppeteer": "^5.4.7",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "globals": "^15.13.0",
    "prettier": "^3.4.2",
    "puppeteer-extra": "^3.3.6"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2022": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "no-console": "off",
      "prefer-const": "error",
      "no-var": "error",
      "object-shorthand": "error",
      "prefer-template": "error",
      "prefer-arrow-callback": "error"
    }
  }
}
